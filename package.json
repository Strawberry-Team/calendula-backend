{
  "name": "calendula-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env index.js",
    "start:dev": "nodemon --env-file=.envDev index.js",
    "test": "env-cmd -f .envDev npx playwright test tests/api/*.test.js --project=chromium",
    "test:report": "env-cmd -f .envDev npx playwright test tests/api/*.test.js --project=chromium; npx playwright show-report"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.10.1",
    "nodemailer": "^6.9.15",
    "nodemon": "^3.1.7",
    "playwright": "^1.51.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@playwright/test": "^1.51.0",
    "@types/node": "^22.13.9"
  }
}
